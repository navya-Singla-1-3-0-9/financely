
<style>
     .recipe-card {
  -webkit-box-shadow: 0px 0px 20px 1px rgba(240,241,243,1);
  -moz-box-shadow: 0px 0px 20px 1px rgba(240,241,243,1);
  box-shadow: 0px 0px 20px 1px rgba(240,241,243,1);
  border:1px solid #f0f1f3;
  width: 300px;
  margin: 50px auto;
  background: radial-gradient(#fbc1cc, #fa99b2);
}
.recipe-card__body {    
    padding: 20px;
}
.recipe-card__heading {
  padding: 0;
  margin: 0 0 0;
  color: #444;
}
.recipe-card__subhead {
  font-size: 13px;
  color: #555;
  margin-bottom: 30px;
}
.recipe-card__ingredients {
  list-style: none;
  margin: 0;
  padding: 0;
  margin-left: 10px;
  column-count: 1;
  li {
    margin-bottom: 5px;
  }
  li:before {
    content: '\2022';
    color: #eb9376;
    margin-right: 5px;
  }
}
</style>
<% posts.forEach(function(post){ %>
	<div class='recipe-card'>
  <div class="recipe-card__body">
    <h1 class="recipe-card__heading"><%=post.journalTitle %></h1>
    <hr>
    <ul class="recipe-card__nav">
      <li>
        <h3 class="active">Who</h3>
        <p><%=post.who %></p>
      </li>
      <hr>
      <li>
        <h3>Where</h3>
        <p><%=post.where %></p>
      </li>
      <li>
      	<h3>What happened?</h3>
        <p><%=post.subject %></p>
      </li>
      <li>
        <h3>Tag</h3>
      <p><%=post.tag %></p>
    </li>
    </ul>
  </div>
</div>
<%
} )%>